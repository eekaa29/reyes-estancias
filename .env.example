# Django Core Settings
# IMPORTANTE: Genera una nueva SECRET_KEY con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

#STRIPE_CLI
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

#DB/DOCKER
DB_NAME=reyes_estancias
DB_USER=your_db_user
DB_PASSWORD=your_db_password
MYSQL_ROOT_PASSWORD=your_root_password
DB_HOST=127.0.0.1
DB_PORT=3306

#SITE_BASE_URL
# Para desarrollo usa: http://127.0.0.1:8000
# Para producción usa: https://reyes-estancias.com
#SITE_BASE_URL=https://reyes-estancias.com

# Email Configuration
# Para desarrollo puedes usar Mailtrap (https://mailtrap.io/)
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_HOST_USER=your_mailtrap_user
EMAIL_HOST_PASSWORD=your_mailtrap_password
EMAIL_PORT=2525

# Celery/Redis Configuration
# IMPORTANTE: En producción, SIEMPRE usa Redis con contraseña

# Para desarrollo local (sin contraseña - SOLO para desarrollo):
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1

# Para producción con contraseña (RECOMENDADO):
# Formato: redis://:[contraseña]@[host]:[puerto]/[db]
# CELERY_BROKER_URL=redis://:tu_contraseña_segura@redis-host:6379/0
# CELERY_RESULT_BACKEND=redis://:tu_contraseña_segura@redis-host:6379/1

# Ejemplo con Redis en Docker con contraseña:
# CELERY_BROKER_URL=redis://:my_secure_password_123@localhost:6379/0
# CELERY_RESULT_BACKEND=redis://:my_secure_password_123@localhost:6379/1

# NPM Configuration
# Si usas nvm, pon la ruta completa, si no, puedes usar solo 'npm'
NPM_BIN_PATH=npm
# Ejemplo con nvm: /home/usuario/.nvm/versions/node/v22.19.0/bin/npm

